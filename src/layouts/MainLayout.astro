---
/**
 * MainLayout.astro - Layout Principal
 * 
 * Layout base para todas as páginas do site.
 * Inclui Header, Footer e estilos globais.
 */

import '../styles/global.css';
import '@fontsource/inter';
import '@fontsource/outfit';

interface Props {
	title?: string;
    description?: string;
    ogImage?: string;
}

const { 
    title = "WordPress é Ultrapassado - A Nova Era do JAMstack", 
    description = "Migre do WordPress para JAMstack e domine o Google com performance superior e custo zero de hospedagem",
    ogImage = "/images/og-default.png"
} = Astro.props;

// Tema padrão
const activeThemeId = 'classic';
const primaryColor = '#a855f7';
const secondaryColor = '#ec4899';
const borderRadius = '16px';

// Helper to convert hex to rgb components for Tailwind opacity support
function hexToRgb(hex: string) {
    if (!hex || typeof hex !== 'string' || !hex.startsWith('#')) return '168 85 247';
    try {
        const r = parseInt(hex.slice(1, 3), 16);
        const g = parseInt(hex.slice(3, 5), 16);
        const b = parseInt(hex.slice(5, 7), 16);
        if (isNaN(r) || isNaN(g) || isNaN(b)) return '168 85 247';
        return `${r} ${g} ${b}`;
    } catch {
        return '168 85 247';
    }
}

const primaryRGB = hexToRgb(primaryColor);
const secondaryRGB = hexToRgb(secondaryColor);

// Importar Header e Footer
let HeaderModule;
let FooterModule;

try {
    HeaderModule = await import(`../themes/classic/components/Header.astro`);
} catch {
    HeaderModule = { default: () => null };
}

try {
    FooterModule = await import(`../themes/classic/components/Footer.astro`);
} catch {
    FooterModule = { default: () => null };
}

const Header = HeaderModule.default;
const Footer = FooterModule.default;
---

<!doctype html>
<html lang="pt-BR" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <meta name="description" content={description} />

        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        {ogImage && <meta property="og:image" content={new URL(ogImage, Astro.url)} />}

        <!-- Theme Engine: Injected Variables -->
        <style is:global define:vars={{ primaryRGB, secondaryRGB, borderRadius }}>
			:root {
				--primary-rgb: var(--primaryRGB);
				--secondary-rgb: var(--secondaryRGB);
				--radius: var(--borderRadius);
			}
            /* Force basic styles even if tailwind fails for a second */
            body { background: #0f172a; color: white; }
		</style>
	</head>
	<body class="bg-dark text-slate-300 font-sans antialiased min-h-screen flex flex-col selection:bg-primary selection:text-white">
        <!-- Background Gradient -->
        <div class="fixed inset-0 -z-10 h-full w-full bg-dark bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]">
            <div class="absolute left-0 right-0 top-0 -z-10 m-auto h-[310px] w-[310px] rounded-full bg-primary/20 blur-[100px]"></div>
        </div>

        {/* Dynamic Theme Header */}
        <Header activeThemeId={activeThemeId} />

        <!-- Main Content -->
		<main class="flex-grow">
			<slot />
		</main>

        {/* Dynamic Theme Footer */}
        <Footer activeThemeId={activeThemeId} />
	</body>
</html>
