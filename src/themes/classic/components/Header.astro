---
/**
 * Header.astro (Classic Theme)
 * 
 * Componente de cabe√ßalho do tema Classic.
 */

const { activeThemeId } = Astro.props;
---

<header class="sticky top-0 z-50 backdrop-blur-md border-b border-white/5 bg-white/5">
    <nav class="container mx-auto px-6 h-20 flex items-center justify-between">
        <a href="/" class="text-2xl font-heading font-black tracking-tighter text-white hover:text-primary transition-colors">
            MEU SITE COM IA
        </a>
        <div class="hidden md:flex gap-10 text-sm font-bold uppercase tracking-widest items-center">
            <a href="/curso-vendas" class="hover:text-primary transition-colors">Meu Site com IA</a>
            <a href="#oferta" class="hover:text-primary transition-colors">Oferta</a>
            <a href="#faq" class="hover:text-primary transition-colors">FAQ</a>
        </div>
        
        {/* Mobile Menu Button */}
        <button 
            class="md:hidden p-2 text-white hover:text-primary transition-colors"
            id="mobile-menu-button"
            aria-label="Toggle menu"
        >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <line x1="3" y1="12" x2="21" y2="12"></line>
                <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
        </button>
    </nav>
</header>
